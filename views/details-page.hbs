<div class="container">

    <h2>Movie's Details:</h2>
    <hr>

    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{image}}" class="img-fluid rounded-start" alt="{{title}}">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <a href="/movies" class="btn btn-primary">Go back</a>
                    <h4 class="card-title">{{title}}</h4>
                    <h5 class="card-text">{{director}}</h5>
                    <h6 class="card-text">Stars:</h6>
                    <ul>
                        {{#each stars}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                    <p class="card-text">{{description}}</p>
                    <p>
                        {{#each showtimes}}
                        {{this}} |
                        {{/each}}
                    </p>
                </div>
            </div>
        </div>
    </div>

</div>